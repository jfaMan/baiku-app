<div class="container p-0">
  <div class="map-search">
    <%= form_tag parkings_path, class: "form-inline", method: :get do %>
      <%= text_field_tag :query,
          params[:query],
          class: "form-control map-text-input",
          placeholder: "Search"
        %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <%= render 'pin_form' %>
  <div class="owl-carousel">
    <% @parkings.each do |parking| %>
      <div data-id = "<%= parking.id %>" class="card">
        <%= cl_image_tag(parking.photos.first.key, width: 120, height: 120, crop: :fill) %>
        <%= parking.name %>
      </div>
    <% end %>
  </div>
</div>