<div class="container p-0">
<div class="map-search">
  <%= form_tag parkings_path, class: "form-inline", method: :get do %>
    <%= text_field_tag :query,
          params[:query],
          class: "form-control map-text-input",
          placeholder: "Search"
        %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>
  <div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="owl-carousel">
    <% @parkings.each do |parking| %>
      <div class="card flex-row">
        <div class="card-image">
          <%= cl_image_tag(parking.photos.first.key, width: 120, height: 120, crop: :fill) %>
        </div>
        <div class="card-details flex-grow-1 pl-3">
          <p class="m-0 font-weight-bold my-2"><%= parking.name %></p>
          <p class="m-0"><i class="fas fa-map-marked-alt"></i> <%= parking.address %></p>
          <p class="m-0" id="distance"><i class="fas fa-directions"></i></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
