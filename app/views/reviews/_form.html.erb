<%= simple_form_for [@parking, @review] do |f| %>
  <%= f.input :comment %>
  <%= f.input :photo, as: :file %>
  <%= f.input :risk_level, label: 'Safe to park?', collection: [['safe', 'Yes'], ['risky', 'No']], label_method: :second, value_method: :first, selected: 'Yes' %>
  <div class='d-flex justify-content-between'>
    <%= link_to "Back", parking_path(params[:id]), class: 'btn btn-cancel text-center' %>
    <%= f.submit "Submit", class: "btn-yellow btn-add" %>
  </div>
<% end %>
